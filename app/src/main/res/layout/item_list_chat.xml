<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatarShop"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/logo_not_text" />

    <TextView
        android:id="@+id/tvNameShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:maxWidth="@dimen/_160sdp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/ivAvatarShop"
        android:text="Chung toi la nhung nguoi ban"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameShop"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_toEndOf="@+id/ivAvatarShop"
        android:text="Store Ngọc Thơm"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/tvTimeLastSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="31-07-2022"
        android:textSize="@dimen/_10sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvLastMessage"
        android:layout_toEndOf="@id/ivAvatarShop"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/greenLight"
        />
</RelativeLayout>