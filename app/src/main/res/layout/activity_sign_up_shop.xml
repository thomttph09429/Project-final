<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpShopActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <RelativeLayout
                android:id="@+id/relative_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_relative_header"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_myShop_back"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/arrow_left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="Shop của tôi"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|end"
                        android:layout_marginLeft="@dimen/_70sdp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/notifi" />

                    <ImageView
                        android:id="@+id/img_kekabMenu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/ic_chart_white" />
                </LinearLayout>
            </RelativeLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <RelativeLayout
            android:id="@+id/relative_top_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@+id/collapsing_toolbar"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/greenLight"
            android:gravity="center">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/avatar_empty" />

            <TextView
                android:id="@+id/txt_myShop_setting"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_user"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/bg_boder_20_green1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Sửa  "
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_shopSettings_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_top_user"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/greenLight_30"
                    android:weightSum="10"
                    >
                    <TextView
                        android:layout_weight="9"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:gravity="center_vertical"
                        android:text="Tên cửa hàng"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvCountNameStore"
                        android:layout_weight="1"
                        android:text="0/130"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


                <EditText
                    android:id="@+id/edtEnterStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:hint="Nhập tên cửa hàng"
                    android:textSize="@dimen/_12sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:background="@color/greenLight_20"
                    />


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear_shopSettings_content3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_shopSettings_content1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_8sdp"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

             >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:background="@color/greenLight_30"
                    android:text="FaceBook"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >

                <EditText
                    android:id="@+id/edtLinkFace"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@color/greenLight_20"
                    android:hint="Rau sạch"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                   />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_shopSettings_content4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_shopSettings_content3"
            android:orientation="vertical"
            android:paddingTop="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
             >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:gravity="center_vertical"
                    android:text="Địa Chỉ"
                    android:background="@color/greenLight_30"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Tỉnh/Thành phố, Quận/Huyện, Phường/Xã"
                    android:textSize="@dimen/_12sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:background="@color/greenLight_20"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_shopSettings_content4"
            android:orientation="vertical"
            android:paddingTop="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:gravity="center_vertical"
                    android:text="Mô tả shop"
                    android:background="@color/greenLight_30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edtDesStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/greenLight_20"
                    android:gravity="top|start"
                    android:paddingStart="@dimen/_10sdp"
                    android:hint="Nhập mô tả shop"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_shopSettings_content5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lnDes"
            android:orientation="vertical"
            android:paddingTop="@dimen/_8sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:gravity="center_vertical"
                    android:background="@color/greenLight_30"
                    android:text="Hình ảnh giới thiệu"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_shopSettings_gioiThieu"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/grayLight" />

                <Button
                    android:id="@+id/btnAddImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:text="Thêm" />


            </LinearLayout>

            <Button
                android:id="@+id/btnSignUpShop"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_50sdp"
                android:textAllCaps="false"
                android:text="Lưu" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
