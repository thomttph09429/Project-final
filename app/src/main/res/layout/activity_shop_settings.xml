<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.shop_settings">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentScrim="@color/white"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:toolbarId="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/relative_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_relative_header"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/img_myShop_back"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/arrow_left" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="Shop của tôi"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|end"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/notifi" />

                <ImageView
                    android:id="@+id/img_kekabMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|end"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/mess" />
            </LinearLayout>
        </RelativeLayout>


    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <RelativeLayout
        android:id="@+id/relative_top_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/collapsing_toolbar"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@color/greenLight"
        android:gravity="center">


        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bg_border_25"
            android:src="@drawable/demo" />

        <TextView
            android:id="@+id/txt_myShop_setting"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_user"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_boder_20_green1"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Sửa  "
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linear_shopSettings_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/relative_top_user"
        >
        <LinearLayout
            android:background="#CCE59D"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tên cửa hàng"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:background="#E3EFCE">

            <TextView
                android:id="@+id/txt_shopSettings_nameShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người Mua nè"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_shopSettings_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linear_shopSettings_content1"
        android:paddingTop="@dimen/_8sdp"
        >
        <LinearLayout
            android:background="#CCE59D"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Loại người dùng"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:background="#E3EFCE">

            <Spinner
                android:id="@+id/spiner_shopSettings_theLoaiUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_shopSettings_content3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linear_shopSettings_content2"
        android:paddingTop="@dimen/_8sdp"
        >
        <LinearLayout
            android:background="#CCE59D"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="FaceBook"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:background="#E3EFCE">
            <TextView
                android:id="@+id/txt_shopSettings_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rau Sạch 3 Miền"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_shopSettings_content4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linear_shopSettings_content3"
            android:paddingTop="@dimen/_8sdp"
            >
            <LinearLayout
                android:background="#CCE59D"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Địa Chỉ"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_shopSettings_content5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linear_shopSettings_content4"
        android:paddingTop="@dimen/_8sdp"
        >
        <LinearLayout
            android:background="#CCE59D"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hình ảnh giới thiệu"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_shopSettings_gioiThieu"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/black"
                android:layout_margin="@dimen/_8sdp"/>
            <Button
                android:id="@+id/btn_shopSettings_addImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_8sdp"/>
        </LinearLayout>
        <Button
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Lưu"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>



</RelativeLayout>