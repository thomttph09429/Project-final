<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderText">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContainerText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/fieldLabel</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShopSmallDetail">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/labelGrayGreenBG</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="ContentText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InputText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SupportText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grayDark</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="QuestionText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="NameProductText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="PriceProductText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>